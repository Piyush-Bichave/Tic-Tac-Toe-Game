            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn6"
            android:onClick="Check"
            android:contentDescription="Button 6"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn7"
            android:onClick="Check"
            android:contentDescription="Button 7"/>
        <Button
            android:id="@+id/btn8"
            android:onClick="Check"
            android:contentDescription="Button 8"
            android:layout_marginLeft="10dp"/>
        <Button
            android:id="@+id/btn9"
            android:onClick="Check"
